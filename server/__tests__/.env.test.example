# Authentication Testing Suite Environment Configuration

# Base URL for the API server
TEST_BASE_URL=http://localhost:3001

# Admin credentials for obtaining admin JWT
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=your_admin_password_here

# Keystone JWT for testing default user flow
# Obtain this from your Keystone service and paste it here
TEST_KEYSTONE_JWT=

# Optional: Set to 'true' to enable verbose logging
TEST_VERBOSE=false

# Optional: Number of concurrent requests for stress testing
TEST_CONCURRENT_REQUESTS=10

# Optional: Performance threshold in milliseconds
TEST_PERFORMANCE_THRESHOLD=1000
